<div class = "event-list">

  <% if @current_user %>
    <%= link_to "Create a New Event", new_event_path, class:"pea-logo btn btn-default" %>
  <% end %>
  <ul>
    EVENTS
    <% @events.each do |event| %>
      <li><strong><%=  event.title %></strong>&nbsp <%= event.event_datetime.strftime("%b %e, %Y %I:%M %P") %></li>
    </li>
          <li> &nbsp&nbsp<%= event.organizer || User.find(event.user_id).display_name || User.find(event.user_id).username %></li>
      <% if session[:user_id] && @current_user.id == event.user_id %>
      <li> <%= button_to "DELETE", event_path(event.id), method: "delete"  %>
       <%= button_to "EDIT", edit_event_path(event.id), method: "get"  %></li>
      <% end %>
    <% end %>

  </ul>

</div>
