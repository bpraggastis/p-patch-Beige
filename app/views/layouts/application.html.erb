<!DOCTYPE html>
<html>
<head>
  <title>PeaPatch</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag "application", 'http://fonts.googleapis.com/css?family=Cherry+Cream+Soda', :media => "all" %>
  <div class="notifications">
    <% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
    <% end -%>
  </div>
</head>

<body>
  <div class="container-fluid">
    <div class="header">
      <div class="row">
        <div class="col-xs-12 col-sm-9">
          <div class="site-name">
            Site Name
          </div>
        </div>

        <div class="col-xs-12 col-sm-3">
          <div class="user-box">
            <% if @current_user && @current_user.is_admin? %>
              Signed in as <%= @current_user.username %>

              <%= button_to "Post a New Article", "#", {:class => "btn btn-default btn-xs", :role => "button"}%>
              <%= button_to "Sign Out", destroy_path, :class => "btn btn-danger btn-xs", :method => "delete"%>
            <% elsif @current_user %>
              Signed in as <%= @current_user.username %>
              <%= button_to "Sign In As Admin", "#", :class => "btn btn-default btn-xs"%>
              <%= button_to "Sign Out", destroy_path, :class => "btn btn-danger btn-xs", :method => "delete"%>
            <% else %>
              <div id="login">
                <%= link_to "Sign In", "/auth/developer", :class => "btn btn-default btn-xs" %>
              </div>
              <div id="new-account">
                <%= link_to "Create New User Account", new_user_path, :class => "btn btn-default btn-xs" %>
              </div>
            <% end %>
          </div><!-- /user-box -->
        </div>

      </div> <!-- /row-->
    </div><!-- /header -->

  <div class="site-content">
    <%= yield %>
  </div>


</div> <!-- /container-fluid -->





</body>


</html>
